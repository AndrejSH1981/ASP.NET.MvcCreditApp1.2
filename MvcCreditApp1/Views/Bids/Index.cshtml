@model IEnumerable<MvcCreditApp1.Models.Bid>

@{
    ViewBag.Title = "Заявки";
   
}

<h2>Заявки</h2>

<p>
    @Html.ActionLink("Создать новую заявку", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
